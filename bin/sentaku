_sf_s () { # {{{
  if ((_s_s_content == 1));then
    if [ ! -f "${_s_inputs[$_s_current_n]}" ];then
      output="$(_sf_nth $((_s_current_n))) value: ${_s_inputs[$_s_current_n]}
===============
Not a file.
"
    _sf_echo "$output"
    else
      clear >/dev/tty
      ${VISUAL:-less} "${_s_inputs[$_s_current_n]}" >/dev/tty </dev/tty
      _s_is_print=1
    fi
  else
    _sf_echo "$(_sf_nth $((_s_current_n))) value:

${_s_inputs[$_s_current_n]}\n"
  fi
} # }}}
