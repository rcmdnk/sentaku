# function for <C-a>-<C-Z>, <C-Space> {{{
_sf_c_a () { # {{{
  _s_n_move=0
  _sf_gG
  #local i
  #for i in $(seq 0 $((_s_n-1)));do
  #  _s_visual=-2
  #  _s_v_selected[$i]=1
  #done
  #_s_is_print=1
