# function for C-a-C-Z }}}

_sf_esc () { # {{{
  _sf_read
  local r2=$_s_read
  if [[ "$r2" = "v" ]];then # M-v
    _s_n_move=$((_s_max_show)); _sf_n_up
    return
  elif [[ "$r2" = "[" ]];then
    _sf_read
    local r3=$_s_read
    if [[ "$r3" = "A" ]];then # cursor up
      _sf_n_up
      return
    elif [[ "$r3" = "B" ]];then # cursor down
      _sf_n_down
      return
    fi
  fi
  if ((_s_visual != -1));then
    _s_visual=-1
    local i
    for i in $(seq 0 $((_s_n-1)));do
      _s_v_selected[$i]=0
    done
    _s_is_print=1
  fi
  if [[ "$_s_search" != "" ]];then
    _s_inputs=("${_s_pre_inputs_0[@]}")
    _s_n=${#_s_inputs[@]}
    _s_search=""
    _s_search_words=""
    _sf_reset
  fi
} # }}}

_sf_space () { # {{{
  # Space to start visual
  if ((_s_v_selected[_s_current_n] == 1));then
    _s_v_selected[$_s_current_n]=0
  else
    _s_v_selected[$_s_current_n]=1
  fi
  _s_visual=-2
  _sf_print_current_line
} # }}}

_sf_enter () { # {{{
  _sf_select
} # }}}

_sf_slash () { # {{{
  _sf_search
} # }}}

_sf_push () { # {{{
  # Set input
  local input="$*"
  shift $#
  if ((_s_stdin == 1));then
    input=$(cat -)
  fi

  # Ignore blank
  if [[ "$input" = "" ]];then
    return 1
  fi

  # Renew values
  _sf_get_values_wrapper 0 0
  IFS="$_s_s_push"
  _s_inputs=(${input}${_s_s_push}${_s_inputs[@]})
  IFS=$_s_IFS
  _s_n=${#_s_inputs[@]}
  _sf_align_values 0 0

  _sf_echoln "$input is stored in $_s_file"
} # }}}

_sf_main () { # {{{

  # Set trap
  trap "_sf_clear;_s_trapped=1;_s_stdin=0;_s_ret=1;_sf_finalize;exit" HUP INT QUIT ABRT SEGV TERM

  # Initialization
  _sf_initialize

  # Get arguments
  _sf_check_args "$@"
  _s_ret=$?
  if ((_s_ret != 0));then
    _sf_finalize
    return $?
  fi
  if ((_s_continue == 0));then
    _sf_finalize
    return $?
  fi

  # Get values
  _sf_get_values_wrapper
  _s_ret=$?
  if ((_s_ret != 0));then
    _sf_finalize
    return $?
  fi

  # Return nth
  if ((_s_current_n >= 0));then
    _sf_finalize
    return $?
  fi

  # Hide displays
  _sf_hide

  # Initialize values
  _sf_reset

  while : ;do
    _sf_printall 1
    _sf_read
    local r=$_s_read
    case $r in
      # Use common functions of C-*, Esc, Space and Enter for both vim/emacs modes.
      $'\ca' ) _sf_c_a;;
      $'\cb' ) _sf_c_b;;
      $'\cc' ) _sf_c_c;;
      $'\cd' ) _sf_c_d;;
      $'\ce' ) _sf_c_e;;
      $'\cf' ) _sf_c_f;;
      $'\cg' ) _sf_c_g;;
      $'\ch' ) _sf_c_h;;
      $'\ci' ) _sf_c_i;;
      $'\cj' ) _sf_c_j;;
      $'\ck' ) _sf_c_k;;
      $'\cl' ) _sf_c_l;;
      $'\cm' ) _sf_c_m;;
      $'\cn' ) _sf_c_n;;
      $'\co' ) _sf_c_o;;
      $'\cp' ) _sf_c_p;;
      $'\cr' ) _sf_c_r;;
      $'\cs' ) _sf_c_s;;
      $'\ct' ) _sf_c_t;;
      $'\cu' ) _sf_c_u;;
      $'\cv' ) _sf_c_v;;
      $'\cw' ) _sf_c_w;;
      $'\cx' ) _sf_c_x;;
      $'\cy' ) _sf_c_y;;
      $'\cz' ) _sf_c_z;;
      $'\E' ) _sf_esc;;
      " " ) _sf_space;;
      ""|$'\n' ) _sf_enter;; # Enter (Normally "" corresponds to Enter (line break before any key))

      # Differences for difference modes.
      * )
        if ((_s_keymode == 0));then
          case $r in
            # Vim mode
            "0" ) _sf_0;;
            "1" ) _sf_1;;
            "2" ) _sf_2;;
            "3" ) _sf_3;;
            "4" ) _sf_4;;
            "5" ) _sf_5;;
            "6" ) _sf_6;;
            "7" ) _sf_7;;
            "8" ) _sf_8;;
            "9" ) _sf_9;;
            "a" ) _sf_a;;
            "b" ) _sf_b;;
            "c" ) _sf_c;;
            "d" ) _sf_d;;
            "e" ) _sf_e;;
            "f" ) _sf_f;;
            "g" ) _sf_g;;
            "h" ) _sf_h;;
            "i" ) _sf_i;;
            "j" ) _sf_j;;
            "k" ) _sf_k;;
            "l" ) _sf_l;;
            "m" ) _sf_m;;
            "n" ) _sf_n;;
            "o" ) _sf_o;;
            "p" ) _sf_p;;
            "q" ) _sf_q;;
            "r" ) _sf_r;;
            "s" ) _sf_s;;
            "t" ) _sf_t;;
            "u" ) _sf_u;;
            "v" ) _sf_v;;
            "w" ) _sf_w;;
            "x" ) _sf_x;;
            "y" ) _sf_y;;
            "z" ) _sf_z;;
            "A" ) _sf_A;;
            "B" ) _sf_B;;
            "C" ) _sf_C;;
            "D" ) _sf_D;;
            "E" ) _sf_E;;
            "F" ) _sf_F;;
            "G" ) _sf_G;;
            "H" ) _sf_H;;
            "I" ) _sf_I;;
            "J" ) _sf_J;;
            "K" ) _sf_K;;
            "L" ) _sf_L;;
            "M" ) _sf_M;;
            "N" ) _sf_N;;
            "O" ) _sf_O;;
            "P" ) _sf_P;;
            "Q" ) _sf_Q;;
            "R" ) _sf_R;;
            "S" ) _sf_S;;
            "T" ) _sf_T;;
            "U" ) _sf_U;;
            "V" ) _sf_V;;
            "W" ) _sf_W;;
            "X" ) _sf_X;;
            "Y" ) _sf_Y;;
            "Z" ) _sf_Z;;
            "/" ) _sf_slash;;
          esac
        else
          _sf_search "$r"
        fi
        ;;
    esac
    ((_s_break == 1)) && break
  done

  # Clear (Show cursor, Restore display, Enable echo input)
  _sf_clear

  # Finalization
  _sf_finalize
} # }}}

# Execution part {{{
if [ "$1" != "-n" ];then
  _sf_main "$@"
fi
